<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c6e2ff"
    android:padding="8dp">

    <ImageView
        android:id="@+id/evolution"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/evolution"
        android:scaleType="centerCrop"
        android:layout_below="@id/logo"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:text="Evolve yourself!" />
    <TextView
        android:id="@+id/adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:text="2465 Latham St, Mountain View, CA 94043"/>

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/adress"
        android:textSize="14dp"
        android:layout_marginTop="4dp"
        android:text="650-555-5555"/>
    <TextView
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/phone_number"
        android:textSize="14dp"
        android:layout_marginTop="4dp"
        android:text="www.udacity.com"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/website"
        android:textSize="18dp"
        android:layout_marginTop="4dp"
        android:text="Udacity"/>
</RelativeLayout>
